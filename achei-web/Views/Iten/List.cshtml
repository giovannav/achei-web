                                        if (@Model.Item1[0].student_record == @iten.student_record)
                                        {
                                            <a type="button" class="btn btn-primary ml-4" asp-area="" asp-controller="Iten" asp-route-id="@iten.id" asp-action="Update">Editar</a>
