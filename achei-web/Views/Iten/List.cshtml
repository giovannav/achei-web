                                </div>
                                <h3 class="heading">@iten.name</h3>
                                <div class="d-flex flex-row align-items-center justify-content-center">
                                    <a type="button" class="btn btn-primary" asp-area="" asp-controller="Iten" asp-route-id="@iten.id" asp-action="Read">Ver mais</a>

