@{
    Layout = null;
}

@model Tuple<achei_web.Models.POJO.Person>

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Item</title>
    <style>
        body {
            background-color: rgb(255, 246, 229);
        }

        .logo {
            max-width: 30%;
            max-height: 30%;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-sm bg-light">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/List/Index">Início</a>
            </li>
        </ul>
        <div class="collapse navbar-collapse justify-content-end" id="navbarCollapse">
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                        Opções
                    </a>
                    <div class="dropdown-menu">
                        <a class="nav-link" asp-area="" asp-controller="Iten" asp-route-user="@Model.Item1.id" asp-action="List">Meus itens</a>
                        <a class="nav-link" asp-area="" asp-controller="Student" asp-route-id="@Model.Item1.id" asp-action="Update">Editar meu perfil</a>
                        <a class="nav-link" asp-area="" asp-controller="Iten" asp-route-id="@Model.Item1.id" asp-action="Create">Cadastrar novo item</a>
                    </div>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="Logout">Sair</a>
                </li>
            </ul>
        </div>
    </nav>
    <section>
        <div class="container h-100 mt-5 mb-5">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                    <!-- <div class="row d-flex justify-content-center align-items-center">
                                           <p class="text-center h3 fw-bold mb-5 mx-1 mx-md-4 mt-4">tapt!</p>
                                       </div>
                                    -->
                                    <p class="text-center h3 fw-bold mb-2 mx-1 mx-md-4 mt-4">Cadastro item</p>
                                    <form class="mx-1 mx-md-4" method="post" enctype="multipart/form-data" asp-controller="Iten" asp-action="Create">
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="name">Nome</label>
                                                <input type="text" id="name" name="name" required class="form-control" />
                                            </div>
                                        </div>
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="description">Descrição</label>
                                                <input type="text" id="description" required name="description"
                                                       class="form-control" />
                                            </div>
                                        </div>
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="date_found">Data (achado)</label>
                                                <input type="date" id="date_found" name="date_found" required class="form-control" />
                                            </div>
                                        </div>
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="ImageFile">Imagem</label>
                                                <input type="file" id="ImageFile" name="ImageFile" required class="form-control" />
                                            </div>
                                        </div>
                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                            <input type="submit" class="btn btn-primary btn-sm" value="Cadastrar" id="button" />
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

</html>